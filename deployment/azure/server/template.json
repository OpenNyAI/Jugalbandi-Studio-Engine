{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "availabilityZones": {
            "type": "array"
        },
        "location": {
            "type": "string"
        },
        "containerName": {
            "type": "string"
        },
        "imageType": {
            "type": "string",
            "allowedValues": [
                "Public",
                "Private"
            ]
        },
        "imageName": {
            "type": "string"
        },
        "osType": {
            "type": "string",
            "allowedValues": [
                "Linux",
                "Windows"
            ]
        },
        "numberCpuCores": {
            "type": "string"
        },
        "memory": {
            "type": "string"
        },
        "restartPolicy": {
            "type": "string",
            "allowedValues": [
                "OnFailure",
                "Always",
                "Never"
            ]
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Standard",
                "Confidential"
            ]
        },
        "imageRegistryLoginServer": {
            "type": "string"
        },
        "imageUsername": {
            "type": "string"
        },
        "imagePassword": {
            "type": "secureString"
        },
        "dbConnectionString": {
            "type": "string"
        },
        "DB_HOST": {
            "type": "string"
        },
        "DB_USER": {
            "type": "string"
        },
        "environmentVariable2": {
            "type": "secureString"
        },
        "DB_NAME": {
            "type": "string"
        },
        "DB_PORT": {
            "type": "string"
        },
        "AAD_APP_CLIENT_ID": {
            "type": "string"
        },
        "AAD_APP_TENANT_ID": {
            "type": "string"
        },
        "AAD_APP_REDIRECT_URI": {
            "type": "string"
        },
        "ADD_APP_SCOPE_URI": {
            "type": "string"
        },
        "ISSUER": {
            "type": "string"
        },
        "KAFKA_BROKER": {
            "type": "string"
        },
        "KAFKA_USE_SASL": {
            "type": "string"
        },
        "KAFKA_ENGINE_TOPIC": {
            "type": "string"
        },
        "KAFKA_PRODUCER_USERNAME": {
            "type": "string"
        },
        "DB_USER4": {
            "type": "secureString"
        },
        "KAFKA_CONSUMER_USERNAME": {
            "type": "string"
        },
        "DB_USER6": {
            "type": "secureString"
        },
        "DB_USER7": {
            "type": "secureString"
        },
        "AZURE_OPENAI_ENDPOINT": {
            "type": "string"
        },
        "AZURE_OPENAI_API_VERSION": {
            "type": "string"
        },
        "AZURE_OPENAI_DEPLOYMENT_NAME": {
            "type": "string"
        },
        "ipAddressType": {
            "type": "string"
        },
        "ports": {
            "type": "array"
        },
        "dnsNameLabel": {
            "type": "string"
        },
        "autoGeneratedDomainNameLabelScope": {
            "type": "string"
        }
    },
    "resources": [
        {
            "location": "[parameters('location')]",
            "name": "[parameters('containerName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2022-10-01-preview",
            "zones": "[parameters('availabilityZones')]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[parameters('imageName')]",
                            "resources": {
                                "requests": {
                                    "cpu": "[int(parameters('numberCpuCores'))]",
                                    "memoryInGB": "[float(parameters('memory'))]"
                                }
                            },
                            "environmentVariables": [
                                {
                                    "name": "SERVER_HOST",
                                    "value": "https://api.jugalbandi.studio"
                                },
                                {
                                    "name": "DB_CONNECTION_STRING",
                                    "value": "[parameters('dbConnectionString')]"
                                },
                                {
                                    "name": "DB_HOST",
                                    "value": "[parameters('DB_HOST')]"
                                },
                                {
                                    "name": "DB_USER",
                                    "value": "[parameters('DB_USER')]"
                                },
                                {
                                    "name": "DB_PASSWORD",
                                    "secureValue": "[parameters('environmentVariable2')]"
                                },
                                {
                                    "name": "DB_NAME",
                                    "value": "[parameters('DB_NAME')]"
                                },
                                {
                                    "name": "DB_PORT",
                                    "value": "[parameters('DB_PORT')]"
                                },
                                {
                                    "name": "AAD_APP_CLIENT_ID",
                                    "value": "[parameters('AAD_APP_CLIENT_ID')]"
                                },
                                {
                                    "name": "AAD_APP_TENANT_ID",
                                    "value": "[parameters('AAD_APP_TENANT_ID')]"
                                },
                                {
                                    "name": "AAD_APP_REDIRECT_URI",
                                    "value": "[parameters('AAD_APP_REDIRECT_URI')]"
                                },
                                {
                                    "name": "ADD_APP_SCOPE_URI",
                                    "value": "[parameters('ADD_APP_SCOPE_URI')]"
                                },
                                {
                                    "name": "ISSUER",
                                    "value": "[parameters('ISSUER')]"
                                },
                                {
                                    "name": "KAFKA_BROKER",
                                    "value": "[parameters('KAFKA_BROKER')]"
                                },
                                {
                                    "name": "KAFKA_USE_SASL",
                                    "value": "[parameters('KAFKA_USE_SASL')]"
                                },
                                {
                                    "name": "KAFKA_ENGINE_TOPIC",
                                    "value": "[parameters('KAFKA_ENGINE_TOPIC')]"
                                },
                                {
                                    "name": "KAFKA_PRODUCER_USERNAME",
                                    "value": "[parameters('KAFKA_PRODUCER_USERNAME')]"
                                },
                                {
                                    "name": "KAFKA_PRODUCER_PASSWORD",
                                    "secureValue": "[parameters('DB_USER4')]"
                                },
                                {
                                    "name": "KAFKA_CONSUMER_USERNAME",
                                    "value": "[parameters('KAFKA_CONSUMER_USERNAME')]"
                                },
                                {
                                    "name": "KAFKA_CONSUMER_PASSWORD",
                                    "secureValue": "[parameters('DB_USER6')]"
                                },
                                {
                                    "name": "AZURE_OPENAI_API_KEY",
                                    "secureValue": "[parameters('DB_USER7')]"
                                },
                                {
                                    "name": "AZURE_OPENAI_ENDPOINT",
                                    "value": "[parameters('AZURE_OPENAI_ENDPOINT')]"
                                },
                                {
                                    "name": "AZURE_OPENAI_API_VERSION",
                                    "value": "[parameters('AZURE_OPENAI_API_VERSION')]"
                                },
                                {
                                    "name": "AZURE_OPENAI_DEPLOYMENT_NAME",
                                    "value": "[parameters('AZURE_OPENAI_DEPLOYMENT_NAME')]"
                                }
                            ],
                            "ports": "[parameters('ports')]",
                            "command": [
                                "uvicorn",
                                "app.main:app",
                                "--workers",
                                "1",
                                "--host",
                                "0.0.0.0",
                                "--port",
                                "80"
                            ]
                        }
                    }
                ],
                "restartPolicy": "[parameters('restartPolicy')]",
                "osType": "[parameters('osType')]",
                "sku": "[parameters('sku')]",
                "imageRegistryCredentials": [
                    {
                        "server": "[parameters('imageRegistryLoginServer')]",
                        "username": "[parameters('imageUsername')]",
                        "password": "[parameters('imagePassword')]"
                    }
                ],
                "ipAddress": {
                    "type": "[parameters('ipAddressType')]",
                    "ports": "[parameters('ports')]"
                },
                "subnetIds": [
                    {
                        "id": "/subscriptions/dc74cde7-0564-4ddb-a01d-355dd378797b/resourceGroups/jugalbandi-studio/providers/Microsoft.Network/virtualNetworks/jb-studio-vnet/subnets/default"
                    }
                ]
            },
            "tags": {}
        }
    ]
}
