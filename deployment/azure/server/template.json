{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "availabilityZones": {
            "type": "array"
        },
        "location": {
            "type": "string"
        },
        "containerName": {
            "type": "string"
        },
        "imageType": {
            "type": "string",
            "allowedValues": [
                "Public",
                "Private"
            ]
        },
        "imageName": {
            "type": "string"
        },
        "osType": {
            "type": "string",
            "allowedValues": [
                "Linux",
                "Windows"
            ]
        },
        "numberCpuCores": {
            "type": "string"
        },
        "memory": {
            "type": "string"
        },
        "restartPolicy": {
            "type": "string",
            "allowedValues": [
                "OnFailure",
                "Always",
                "Never"
            ]
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Standard",
                "Confidential"
            ]
        },
        "imageRegistryLoginServer": {
            "type": "string"
        },
        "imageUsername": {
            "type": "string"
        },
        "imagePassword": {
            "type": "secureString"
        },
        "dbConnectionString": {
            "type": "string"
        },
        "environmentVariable0": {
            "type": "string"
        },
        "environmentVariable1": {
            "type": "string"
        },
        "environmentVariable2": {
            "type": "secureString"
        },
        "environmentVariable3": {
            "type": "string"
        },
        "environmentVariable4": {
            "type": "string"
        },
        "environmentVariable5": {
            "type": "string"
        },
        "environmentVariable6": {
            "type": "string"
        },
        "environmentVariable7": {
            "type": "string"
        },
        "environmentVariable8": {
            "type": "string"
        },
        "environmentVariable9": {
            "type": "string"
        },
        "environmentVariable10": {
            "type": "string"
        },
        "environmentVariable11": {
            "type": "string"
        },
        "environmentVariable12": {
            "type": "string"
        },
        "environmentVariable13": {
            "type": "string"
        },
        "environmentVariable14": {
            "type": "secureString"
        },
        "environmentVariable15": {
            "type": "string"
        },
        "environmentVariable16": {
            "type": "secureString"
        },
        "environmentVariable17": {
            "type": "secureString"
        },
        "environmentVariable18": {
            "type": "string"
        },
        "environmentVariable19": {
            "type": "string"
        },
        "environmentVariable20": {
            "type": "string"
        },
        "ipAddressType": {
            "type": "string"
        },
        "ports": {
            "type": "array"
        },
        "dnsNameLabel": {
            "type": "string"
        },
        "autoGeneratedDomainNameLabelScope": {
            "type": "string"
        }
    },
    "resources": [
        {
            "location": "[parameters('location')]",
            "name": "[parameters('containerName')]",
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2022-10-01-preview",
            "zones": "[parameters('availabilityZones')]",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerName')]",
                        "properties": {
                            "image": "[parameters('imageName')]",
                            "resources": {
                                "requests": {
                                    "cpu": "[int(parameters('numberCpuCores'))]",
                                    "memoryInGB": "[float(parameters('memory'))]"
                                }
                            },
                            "environmentVariables": [
                                {
                                    "name": "SERVER_HOST",
                                    "value": "https://api.jugalbandi.studio"
                                },
                                {
                                    "name": "DB_CONNECTION_STRING",
                                    "value": "[parameters('dbConnectionString')]"
                                },
                                {
                                    "name": "DB_HOST",
                                    "value": "[parameters('environmentVariable0')]"
                                },
                                {
                                    "name": "DB_USER",
                                    "value": "[parameters('environmentVariable1')]"
                                },
                                {
                                    "name": "DB_PASSWORD",
                                    "secureValue": "[parameters('environmentVariable2')]"
                                },
                                {
                                    "name": "DB_NAME",
                                    "value": "[parameters('environmentVariable3')]"
                                },
                                {
                                    "name": "DB_PORT",
                                    "value": "[parameters('environmentVariable4')]"
                                },
                                {
                                    "name": "AAD_APP_CLIENT_ID",
                                    "value": "[parameters('environmentVariable5')]"
                                },
                                {
                                    "name": "AAD_APP_TENANT_ID",
                                    "value": "[parameters('environmentVariable6')]"
                                },
                                {
                                    "name": "AAD_APP_REDIRECT_URI",
                                    "value": "[parameters('environmentVariable7')]"
                                },
                                {
                                    "name": "ADD_APP_SCOPE_URI",
                                    "value": "[parameters('environmentVariable8')]"
                                },
                                {
                                    "name": "ISSUER",
                                    "value": "[parameters('environmentVariable9')]"
                                },
                                {
                                    "name": "KAFKA_BROKER",
                                    "value": "[parameters('environmentVariable10')]"
                                },
                                {
                                    "name": "KAFKA_USE_SASL",
                                    "value": "[parameters('environmentVariable11')]"
                                },
                                {
                                    "name": "KAFKA_ENGINE_TOPIC",
                                    "value": "[parameters('environmentVariable12')]"
                                },
                                {
                                    "name": "KAFKA_PRODUCER_USERNAME",
                                    "value": "[parameters('environmentVariable13')]"
                                },
                                {
                                    "name": "KAFKA_PRODUCER_PASSWORD",
                                    "secureValue": "[parameters('environmentVariable14')]"
                                },
                                {
                                    "name": "KAFKA_CONSUMER_USERNAME",
                                    "value": "[parameters('environmentVariable15')]"
                                },
                                {
                                    "name": "KAFKA_CONSUMER_PASSWORD",
                                    "secureValue": "[parameters('environmentVariable16')]"
                                },
                                {
                                    "name": "AZURE_OPENAI_API_KEY",
                                    "secureValue": "[parameters('environmentVariable17')]"
                                },
                                {
                                    "name": "AZURE_OPENAI_ENDPOINT",
                                    "value": "[parameters('environmentVariable18')]"
                                },
                                {
                                    "name": "AZURE_OPENAI_API_VERSION",
                                    "value": "[parameters('environmentVariable19')]"
                                },
                                {
                                    "name": "AZURE_OPENAI_DEPLOYMENT_NAME",
                                    "value": "[parameters('environmentVariable20')]"
                                }
                            ],
                            "ports": "[parameters('ports')]",
                            "command": [
                                "uvicorn",
                                "app.main:app",
                                "--workers",
                                "1",
                                "--host",
                                "0.0.0.0",
                                "--port",
                                "80"
                            ]
                        }
                    }
                ],
                "restartPolicy": "[parameters('restartPolicy')]",
                "osType": "[parameters('osType')]",
                "sku": "[parameters('sku')]",
                "imageRegistryCredentials": [
                    {
                        "server": "[parameters('imageRegistryLoginServer')]",
                        "username": "[parameters('imageUsername')]",
                        "password": "[parameters('imagePassword')]"
                    }
                ],
                "ipAddress": {
                    "type": "[parameters('ipAddressType')]",
                    "ports": "[parameters('ports')]"
                },
                "subnetIds": [
                    {
                        "id": "/subscriptions/dc74cde7-0564-4ddb-a01d-355dd378797b/resourceGroups/jugalbandi-studio/providers/Microsoft.Network/virtualNetworks/jb-studio-vnet/subnets/default"
                    }
                ]
            },
            "tags": {}
        }
    ]
}
